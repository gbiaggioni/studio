# =============================================================================
# QR MANAGER - CONFIGURACIÓN PARA OPENLITESPEED (Ubuntu 20 + CyberPanel)
# Compatible sin mod_rewrite - Versión OpenLiteSpeed
# =============================================================================

# Configuración básica de seguridad
Options -Indexes
ServerSignature Off

# Proteger archivos JSON y sensibles
<Files "*.json">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "*.tmp">
    Require all denied
</Files>

<Files "*.bak">
    Require all denied
</Files>

# Proteger archivos de configuración específicos
<Files "config.php">
    <RequireAll>
        Require ip 127.0.0.1
        Require ip ::1
        Require all denied
    </RequireAll>
</Files>

# Proteger archivos críticos del sistema
<FilesMatch "\.(htaccess|htpasswd|ini|phps|fla|psd|log|sh)$">
    Require all denied
</FilesMatch>

# Configurar tipos MIME (Compatible OpenLiteSpeed)
<IfModule mod_mime.c>
    AddType application/json .json
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
</IfModule>

# Configurar compresión GZIP (OpenLiteSpeed compatible)
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # Excluir archivos binarios
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|ico|bmp|tiff)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar|7z)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:pdf|doc|docx|xls|xlsx|ppt|pptx)$ no-gzip dont-vary
</IfModule>

# Configurar cache para recursos estáticos (OpenLiteSpeed)
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS y JavaScript
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType application/x-javascript "access plus 1 week"
    
    # Documentos
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# Configurar headers de seguridad (OpenLiteSpeed compatible)
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Activar filtro XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Configurar Content Security Policy básico
    Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://api.qrserver.com https://ipapi.co; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com;"
    
    # Configurar Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Redirigir a la página principal si acceden al directorio
DirectoryIndex index.php

# Configuración de errores personalizados (Compatible OpenLiteSpeed)
ErrorDocument 400 /index.php
ErrorDocument 401 /index.php
ErrorDocument 403 /index.php
ErrorDocument 404 /index.php
ErrorDocument 500 /index.php

# Desactivar signature del servidor
<IfModule mod_security.c>
    SecServerSignature " "
</IfModule>

# Configuración PHP específica (OpenLiteSpeed)
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
    php_value session.gc_maxlifetime 3600
    php_flag session.cookie_httponly On
    php_flag session.cookie_secure On
</IfModule>